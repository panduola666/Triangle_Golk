<!-- 登入註冊modal -->
<div
  class="modal fade"
  id="account"
  tabindex="-1"
  aria-labelledby="accountLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content overflow-hidden p-3">
      <div class="modal-header border-bottom-0">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="close"
        ></button>
      </div>

      <div class="modal-body mb-3">
        <ul
          class="nav nav-tabs justify-content-center container mb-4"
          role="tablist"
          id="account-tab"
        >
          <li class="nav-item tabs-item" role="presentation">
            <button
              class="nav-link tab fw-bold active"
              id="login-tab"
              data-bs-toggle="tab"
              data-bs-target="#login"
              type="button"
              role="tab"
              aria-controls="login"
              aria-selected="true"
            >
              登入
            </button>
          </li>

          <li class="nav-item tabs-item" role="presentation">
            <button
              class="nav-link tab fw-bold"
              id="register-tab"
              data-bs-toggle="tab"
              data-bs-target="#register"
              type="button"
              role="tab"
              aria-controls="register"
              aria-selected="false"
            >
              註冊
            </button>
          </li>
        </ul>

        <div class="modal-content overflow-hidden border-0 py-1">
          <div class="tab-content" id="tab-content">
            <div
              class="tab-pane fade show active"
              id="login"
              role="tabpanel"
              aria-labelledby="login-tab"
            >
              <form
                class="login-form needs-validation container form-content d-flex flex-column justify-content-between"
                novalidate
              >
                <div class="form-floating mb-3">
                  <input
                    type="email"
                    class="form-control"
                    id="login-email"
                    name="login-email"
                    placeholder="name@example.com"
                    required
                  />
                  <label for="login-email">信箱</label>
                  <div class="invalid-feedback">信箱不得為空</div>
                </div>
                <div class="form-floating mb-3">
                  <input
                    type="password"
                    class="form-control"
                    id="login-password"
                    name="login-password"
                    placeholder="Password"
                    autocomplete="on"
                    required
                  />
                  <label for="login-password">密碼</label>
                  <div class="invalid-feedback">密碼不得為空</div>
                </div>
                <div class="d-flex flex-column gap-4">
                  <button
                    class="btn btn-secondary"
                    type="submit"
                    id="login-btn"
                  >
                    登入會員
                  </button>
                  <button
                    class="btn btn-outline-secondary"
                    id="forget-btn"
                    type="button"
                  >
                    忘記密碼
                  </button>
                </div>
              </form>
            </div>

            <div
              class="tab-pane fade"
              id="register"
              role="tabpanel"
              aria-labelledby="register-tab"
            >
              <form
                class="register-form needs-validation container form-content"
                novalidate
              >
                <div class="form-floating mb-3">
                  <input
                    type="email"
                    class="form-control"
                    id="register-email"
                    name="register-email"
                    placeholder="name@example.com"
                    required
                  />
                  <label for="register-email">信箱（註冊後不可更改）</label>
                  <div class="invalid-feedback">信箱不得為空</div>
                </div>
                <div class="form-floating mb-3">
                  <input
                    type="nickname"
                    class="form-control"
                    id="register-nickname"
                    name="register-nickname"
                    placeholder="nickname"
                    required
                  />
                  <label for="register-nickname"
                    >暱稱（日後可更改，最多 5 字）</label
                  >
                  <div class="invalid-feedback">暱稱不得為空</div>
                </div>
                <div class="form-floating mb-3">
                  <input
                    type="password"
                    class="form-control"
                    id="register-password"
                    name="register-password"
                    placeholder="Password"
                    autocomplete="on"
                    required
                  />
                  <label for="register-password">密碼（至少 6 個字元）</label>
                  <div class="invalid-feedback">密碼不得為空</div>
                </div>
                <button class="btn btn-secondary w-100" type="submit">
                  註冊會員
                </button>
              </form>
            </div>
          </div>
        </div>
        <div class="slide-forget" id="forget">
          <form class="container forget-from needs-validation" novalidate>
            <div class="d-flex flex-column align-items-center mb-3">
              <span class="material-symbols-outlined lock-icon mb-3"
                >lock_reset</span
              >
              <h2 class="title fs-4 fw-bold">忘記密碼 ?</h2>
            </div>
            <div class="form-floating mb-3">
              <input
                type="email"
                class="form-control"
                id="verify-email"
                name="verify-email"
                placeholder="name@example.com"
                required
              />
              <label for="verify-email">信箱</label>
              <div class="invalid-feedback">請輸入信箱</div>
            </div>
            <div class="mb-3">
              <button class="btn btn-secondary w-100" type="submit">
                寄送重設密碼連結
              </button>
            </div>
            <div class="d-flex justify-content-center">
              <a href="#" class="back fw-bold" id="back-btn">返回登入</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

